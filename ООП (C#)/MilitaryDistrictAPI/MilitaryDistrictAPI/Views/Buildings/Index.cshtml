@model IEnumerable<MilitaryDistrictAPI.Models.scaffolded.Building>

@{
    Layout = "~/Views/Shared/CRUD/_LayoutIndex.cshtml";
    ViewData["Title"] = "Сооружения";
}
<table class="table">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Unit)
        </th>
        <th class="col-3">
            @Html.DisplayNameFor(model => model.NumberOfLivingSubunits)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Unit.UnitNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfLivingSubunits)
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.BuildingId">
                   <img src="svg/pencil-square.svg">
               </a> |
               <a asp-action="Details" asp-route-id="@item.BuildingId">
                   <img src="svg/info-circle.svg">
               </a> |
               <a asp-action="Delete" asp-route-id="@item.BuildingId">
                   <img src="svg/trash-fill.svg">
               </a>
            </td>
        </tr>
    }
</tbody>
</table>
