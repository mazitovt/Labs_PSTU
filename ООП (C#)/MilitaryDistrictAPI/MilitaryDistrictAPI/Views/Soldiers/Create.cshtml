@model MilitaryDistrictAPI.Models.scaffolded.Soldier

@{
    Layout = "_LayoutCRUD";
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Военнослужащий</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServingUnitId" class="control-label"></label>
                <select asp-for="ServingUnitId" class ="form-control" asp-items="ViewBag.ServingUnitId">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ServingSubunitId" class="control-label"></label>
                <select asp-for="ServingSubunitId" class="form-control" asp-items="ViewBag.ServingSubunitId">
                    <option selected></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MilitaryRankId" class="control-label"></label>
                <select asp-for="MilitaryRankId" class ="form-control" asp-items="ViewBag.MilitaryRankId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="*"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RankInfoId" class="control-label"></label>
                <select asp-for="RankInfoId" class ="form-control" asp-items="ViewBag.RankInfoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LeaderId" class="control-label"></label>
                <select asp-for="LeaderId" class="form-control" asp-items="ViewBag.LeaderId">
                    <option selected></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Occop" class="control-label"></label>
                <select multiple="multiple" class="multi-select form-control" id="my_multi_select1" asp-for="@Model.Occop" asp-items="ViewBag.Occupations" >
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
