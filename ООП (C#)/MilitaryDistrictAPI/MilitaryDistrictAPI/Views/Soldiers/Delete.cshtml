@model MilitaryDistrictAPI.Models.scaffolded.Soldier

@{
    Layout = "_LayoutCRUD";
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверенны, что хотите удалить запись?</h3>
<div>
    <h4>Военнослужащий</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Leader)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Leader.SoldierId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MilitaryRank)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MilitaryRank.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RankInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RankInfo.RecordId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServingSubunit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServingSubunit.SubunitId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServingUnit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServingUnit.UnitNumber)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SoldierId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
