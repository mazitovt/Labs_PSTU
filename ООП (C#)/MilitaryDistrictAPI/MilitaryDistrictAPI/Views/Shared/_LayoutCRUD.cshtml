@using Google.Protobuf.Reflection
<!DOCTYPE html>

<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Военный округ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/css/bootstrap-multiselect.css">
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/js/bootstrap-multiselect.js" type="text/javascript"></script>

</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ИС Военного округа</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Queries" asp-action="Index">Запросы</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Tables">Таблицы</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container-fluid">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-2">
                <div class="card">
                    <div class="list-group" id="list-tab" role="tablist">
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Units" asp-action="Index">Войсковые части</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Subunits" asp-action="Index">Подразделения</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Soldiers" asp-action="Index">Военнослужащие</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Buildings" asp-action="Index">Сооружения</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Occupations" asp-action="Index">Специальности</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Vehicles" asp-action="Index">Техника</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="VehicleCategories" asp-action="Index">Категории техники</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Weapons" asp-action="Index">Вооружение</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="WeaponCategories" asp-action="Index">Категории вооружения</a>
                        <a class="list-group-item list-group-item-dark"><small><em>Справочники</em></small></a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="MilitaryRanks" asp-action="Index">Звания</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="LocationTypes" asp-action="Index">Типы мест дисклокации</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="SubunitTypes" asp-action="Index">Типы подразделений</a>
                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="UnitTypes" asp-action="Index">Типы войсковых частей</a>
                    </div>
                </div>

            </div>
            <div class="col-10 p-3 mb-2 bg-light text-dark">
                @RenderBody()
            </div>
        </div>
    </main>
</div>

@*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; Информационная система военного округа - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@


@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

