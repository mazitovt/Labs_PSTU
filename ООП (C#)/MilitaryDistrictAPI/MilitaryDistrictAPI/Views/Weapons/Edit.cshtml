@model MilitaryDistrictAPI.Models.scaffolded.Weapon

@{
    ViewData["Title"] = "Вооружение";
    Layout = "~/Views/Shared/CRUD/_LayoutEdit.cshtml";
}

<input type="hidden" asp-for="WeaponId" />
<div class="form-group">
    <label asp-for="WeaponCategoryId" class="control-label"></label>
    <select asp-for="WeaponCategoryId" class="form-control" asp-items="ViewBag.WeaponCategoryId"></select>
    <span asp-validation-for="WeaponCategoryId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Amount" class="control-label"></label>
    <input asp-for="Amount" class="form-control" />
    <span asp-validation-for="Amount" class="text-danger"></span>
</div>
            