@model MilitaryDistrictAPI.Models.scaffolded.Subunit

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<h1>Изменить</h1>

<h4>Подразделение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubunitId" />
            <div class="form-group">
                <label asp-for="LeaderId" class="control-label"></label>
                <select asp-for="LeaderId" class="form-control" asp-items="ViewBag.LeaderId">
                    <option></option>
                </select>
                <span asp-validation-for="LeaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubunitTypeId" class="control-label"></label>
                <select asp-for="SubunitTypeId" class="form-control" asp-items="ViewBag.SubunitTypeId"></select>
                <span asp-validation-for="SubunitTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentUnitId" class="control-label"></label>
                <select asp-for="ParentUnitId" class="form-control" asp-items="ViewBag.ParentUnitId"></select>
                <span asp-validation-for="ParentUnitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
