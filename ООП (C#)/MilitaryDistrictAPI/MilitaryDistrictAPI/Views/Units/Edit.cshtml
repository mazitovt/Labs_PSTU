@model MilitaryDistrictAPI.Models.scaffolded.Unit

@{
    ViewData["Title"] = "Войсковая часть";
    Layout = "~/Views/Shared/CRUD/_LayoutEdit.cshtml";
}

<input type="hidden" asp-for="UnitId" />
<div class="form-group">
    <label asp-for="UnitTypeId" class="control-label"></label>
    <select asp-for="UnitTypeId" class="form-control" asp-items="ViewBag.UnitTypeId"></select>
    <span asp-validation-for="UnitTypeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="UnitNumber" class="control-label"></label>
    <input asp-for="UnitNumber" class="form-control" />
    <span asp-validation-for="UnitNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ParentUnitId" class="control-label"></label>
    <select asp-for="ParentUnitId" class="form-control" asp-items="ViewBag.ParentUnitId">
        <option></option>
    </select>
    <span asp-validation-for="ParentUnitId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="LeaderId" class="control-label"></label>
    <select asp-for="LeaderId" class="form-control" asp-items="ViewBag.LeaderId">
        <option></option>
    </select>
    <span asp-validation-for="LeaderId" class="text-danger"></span>
</div>

