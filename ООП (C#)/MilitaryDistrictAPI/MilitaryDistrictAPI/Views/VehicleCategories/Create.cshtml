@model MilitaryDistrictAPI.Models.scaffolded.VehicleCategory

@{
    ViewData["Title"] = "Категория техники";
    Layout = "~/Views/Shared/CRUD/_LayoutCreate.cshtml";
}

<div class="form-group">
    <label asp-for="UnitId" class="control-label"></label>
    <select asp-for="UnitId" class ="form-control" asp-items="ViewBag.UnitId"></select>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" placeholder="*"/>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
